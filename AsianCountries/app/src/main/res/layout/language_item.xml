<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textView_iso1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iso639_1: "
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iso1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iso639_1"
  android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/textView_iso1"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/textView_iso2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iso639_2: "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_iso1" />

    <TextView
        android:id="@+id/iso2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iso639_2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/textView_iso2"
        app:layout_constraintTop_toBottomOf="@id/textView_iso1" />


    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_iso2" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/textView_name"
        app:layout_constraintTop_toBottomOf="@id/textView_iso2" />

    <TextView
        android:id="@+id/textView_native_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Native name: "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_name" />

    <TextView
        android:id="@+id/native_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Native name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/textView_native_name"
        app:layout_constraintTop_toBottomOf="@id/textView_name" />




</androidx.constraintlayout.widget.ConstraintLayout>